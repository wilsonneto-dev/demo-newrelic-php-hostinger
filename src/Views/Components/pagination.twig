<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {% if currentPage > 1 %}
            <li class="page-item">
                <a class="page-link" href="/feed?page={{ currentPage - 1 }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo; Previous</span>
                </a>
            </li>
        {% endif %}

        <li class="page-item active">
            <a class="page-link" href="/feed?page={{ currentPage }}">{{ currentPage }}</a>
        </li>

        {% if currentPage < totalPages %}
            <li class="page-item">
                <a class="page-link" href="/feed?page={{ currentPage + 1 }}" aria-label="Next">
                    <span aria-hidden="true">Next &raquo;</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>
